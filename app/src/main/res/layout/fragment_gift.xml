<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.gift.GiftFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이웃 검색 페이지로 이동"
            android:textAppearance="@style/TextAppearance.body3"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toEndOf="@id/iv_profile_left_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/md_gift_divider"
        android:layout_width="0dp"
        android:background="@drawable/shadow_down_white"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_profile_header"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_gift_flowerconfirm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gift_flowerconfirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />

        <TextView
            android:id="@+id/tv_gift_flowerconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="내가 선물받은 꽃 확인"
            android:textAppearance="@style/TextAppearance.subtitle3"
            app:layout_constraintStart_toStartOf="@+id/iv_gift_flowerconfirm"
            app:layout_constraintTop_toTopOf="@+id/iv_gift_flowerconfirm" />

        <TextView
            android:id="@+id/tv_gift_flowerconfirmtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawablePadding="6dp"
            android:text="확인하러 가기"
            android:textAppearance="@style/TextAppearance.subtitle4"
            android:textColor="@color/peach1_FF8D6F"
            app:layout_constraintBottom_toBottomOf="@+id/iv_gift_flowerconfirm"
            app:layout_constraintStart_toStartOf="@+id/iv_gift_flowerconfirm" />

        <ImageView
            android:id="@+id/iv_gift_flowersend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="53dp"
            android:src="@drawable/ic_gift_flowersend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_gift_flowerconfirm" />

        <TextView
            android:id="@+id/tv_gift_flowersend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="꽃 선물하기"
            android:textAppearance="@style/TextAppearance.subtitle3"
            app:layout_constraintStart_toStartOf="@+id/iv_gift_flowersend"
            app:layout_constraintTop_toTopOf="@+id/iv_gift_flowersend" />

        <TextView
            android:id="@+id/iv_gift_flowersendtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawablePadding="6dp"
            android:text="선물하러 가기"
            android:textAppearance="@style/TextAppearance.subtitle4"
            android:textColor="@color/peach1_FF8D6F"
            app:layout_constraintBottom_toBottomOf="@+id/iv_gift_flowersend"
            app:layout_constraintStart_toStartOf="@+id/iv_gift_flowersend" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
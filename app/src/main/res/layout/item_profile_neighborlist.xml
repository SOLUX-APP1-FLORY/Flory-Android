<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_selectneighbor_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_profile_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_selectneighbor_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="선재"
        android:textAppearance="@style/TextAppearance.subtitle4"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_selectneighbor_image"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_neighborlist_cancle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="150dp"
        android:backgroundTint="@color/peach4_FFF9F8"
        android:text="팔로우 취소"
        android:textAppearance="@style/TextAppearance.body4"
        android:textColor="@color/gray1_525252"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/peach1_FF8D6F"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>